{% extends 'base.html.twig' %}

{% block title %}Scoring system
{% endblock %}

{% block body %}
	<h1>
		Liste des utilisateurs et des points
	</h1>
	<table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Score</th>
				<th>Nom Utilisateur</th>
				<th>Groupe</th>
				<th>Date de Creation</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for point in points %}
				<tr>
					<td>{{ point.id }}</td>
					<td>{{ point.score }}</td>
					<td>{{ point.user.name }}</td>
					<td>{{ point.user.groupe.libelle }}</td>
					<td>{{ point.dateCreation ? point.dateCreation|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('app_point_show', {'id': point.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
						<a href="{{ path('app_point_edit', {'id': point.id}) }}">
							<i class="fas fa-pen-to-square"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<th>Id</th>
				<th>Score</th>
				<th>Nom Utilisateur</th>
				<th>Groupe</th>
				<th>Date de Creation</th>
				<th>Action</th>
			</tr>
		</tfoot>
	</table>

	<a href="{{ path('app_point_new') }}">Create new</a>


{% endblock %}
