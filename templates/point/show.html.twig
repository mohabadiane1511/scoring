{% extends 'base.html.twig' %}

{% block title %}Point
{% endblock %}

{% block body %}
	<h1>Point</h1>

	<table class="table table-striped table-bordered table-sm">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ point.id }}</td>
			</tr>
			<tr>
				<th>Score</th>
				<td>{{ point.score }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ point.user.name }}</td>
			</tr>
			<tr>
				<th>Groupe</th>
				<td>{{ point.user.groupe.libelle }}</td>
			</tr>
			<tr>
				<th>DateCreation</th>
				<td>{{ point.dateCreation ? point.dateCreation|date('Y-m-d ') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_point_index') }}">back to list</a>

	<a href="{{ path('app_point_edit', {'id': point.id}) }}">edit</a>

	{{ include('point/_delete_form.html.twig') }}
{% endblock %}
